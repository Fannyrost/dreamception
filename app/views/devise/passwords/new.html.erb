<div class="container password">
  <div class="mt-48 pt-40 pb-40 pl-20 pr-20 text-black rounded-lg lg:mr-1 bg-creme-card">
  <h2 class="text-center">Forgot your password?</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="input pt-6 pb-2">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          </div>
        </div>

      <button class="form-actions bg-navy-card hover:border py-2 px-4 rounded-full shadow">
        <%= f.button :submit, "Send me reset password instructions", style:"color:white;" %>
      </button>
      <% end %>

  <div class="link-signin text-center">
    <%= render "devise/shared/links" %>
    <%= link_to "Back to HomePage", root_path %>
  </div>
  </div>
</div>
