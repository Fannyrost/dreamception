<%= render 'shared/navbar' %>

<div class="container show-user">
  <div class= "d-flex justify-content-between align-items-center">
    <div class=""><h1>Mon profil</h1></div>
    <div class="">Modifier</div>
  </div>
  <div class="box-profil d-flex justify-content-between">
    <div class="mx-4 my-1">
    <p>Nom : <%= @user.last_name %></p>
    <p>Prénom : <%= @user.first_name %></p>
    </div>
    <div class="mx-4 my-1">
    <p>Email : <%= @user.email %></p>
    <p>Téléphone : <%= @user.phone_number %></p>
    </div>
  </div>
  <div class="mt-3"><h1> Historique</h1></div>
  <div class="container d-flex justify-content-between mt-3">
    <div class="box-past-exp"><h3>Expériences vécues</h3>
      <% @user.bookings.past_bookings.each do |booking| %>
      <div class="box-exp">
        <div> <%= booking.experience.title %></div>
        <div> <%= booking.experience.description %></div>
        <div> <%= booking.experience.average_ratings %></div>
      </div>
      <% end %>
    </div>
    <div class="box-next-exp"><h3>Expériences à venir</h3>
      <% @user.bookings.next_bookings.each do |booking| %>
      <div class="box-exp">
        <div> <%= booking.experience.title %></div>
        <div> <%= booking.experience.description %></div>
        <div> <%= booking.experience.average_ratings %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>
