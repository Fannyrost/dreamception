
<div class="banner">
  <div class="banner-content">
    <h1>Dreamception</h1>
    <p>Enter the void</p>
  </div>
</div>


<div class="container mt-5">
  <h2>Découvrez nos séjours en immersion</h2>

    <h3 class="mt-5 mb-2">Sciences Fiction</h3>
    <% @experiences.each do |experience| %>
      <% if experience.category == "sciences fiction" %>
      <%= link_to experience_path(experience) do %>
        <div class="card-homepage d-flex align-items-end" style= "background-image: url('<%= experience.photo_url %>')">
          <div class="card-hp-content m-5">
            <h4> <%= experience.title %> </h4>
            <p><%= experience.short_description %></p>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>

    <h3 class="mt-5 mb-2">Histoire</h3>
