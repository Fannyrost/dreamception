<%= render 'shared/navbar_home' %>

<div class="container block lg:mt-48 mt-32">

  <div class="lg:pt-20 pt-10 pl-20 pr-20 text-black rounded-lg lg:mr-1 pb-4 mb-2 bg-creme-card">
    <h3 id="book">Créer une nouvelle experience</h3>

    <%= simple_form_for(@experience) do |f| %>

    <div class="form-inputs">
      <%= f.input :title, label: "Titre :" %>
      <%= f.input :short_description, label: "Courte description :" %>
      <%= f.input :long_description, label: "Longue description :" %>
      <%= f.input :price_per_person, label: "Prix par participants :" %>
      <%= f.input :nb_max_of_persons, label: "Nombre limite de participants" %>
      <%= "Catégorie : " %>
      <%= f.select :category, options_for_select(["sciences fiction", "histoire", "sensations", "insolite"]) %>
      <%= f.input :photo, as: :file, inline_label: "Photo"  %>

      <%= f.submit 'Enregistrer', class: 'btn-salmon ml-1 mt-3' %>
    </div>
    <% end %>

  </div>
