<div class="review-new">
  <h2 class="text-center">Your feedback matters</h2>
    <%= simple_form_for [@experience, @review] do |f| %>
      <%= f.error_notification %>

        <div class="form-inputs">
          <div class="input pt-6 pb-2">
            <%= f.input :content %>
          </div>
          <div class="input py-2">
            <%= f.input :rating, as: :radio_buttons, collection: (1..5) %>
          </div>
        </div>

    <button class="form-actions bg-navy-card hover:border py-2 px-4 rounded-full shadow">
      <%= f.button :submit, "Create", style:"color: white";%>
    </button>

    <% end %>

</div>
