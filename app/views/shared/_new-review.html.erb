<div class="review-new">
  <h2 class="text-center">Donnez-nous notre avis !</h2>
    <%= simple_form_for [@experience, @review] do |f| %>
      <%= f.error_notification %>

        <div class="form-inputs">
          <div class="input pt-6 pb-2">
            <%= f.input :content %>
          </div>
          <div class="input py-2 d-flex">
            <%= f.input :rating, as: :radio_buttons, collection: (1..5) %>
          </div>
        </div>

      <%= f.submit "Envoyer", experience_reviews_path, method: :post, class: 'btn-salmon ml-1 mt-3'%>

    <% end %>

</div>
